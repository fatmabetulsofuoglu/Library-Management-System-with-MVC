@using MVCLibraryWebApplication.Models.Entity
@model List<TBL_YAZAR>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Yazarlar</h2>

<br />
<table class="table table-striped">
    <tr style="background-color: #FFB606">
        <th>ID</th>
        <th>AD</th>
        <th>SOYAD</th>
        <th>DETAY</th>
        <th>GÜNCELLE</th>
        <th>SİL</th>
    </tr>

    @foreach (var yazar in Model)
    {
        <tr>
            <td>@yazar.ID </td>
            <td>@yazar.AD</td>
            <td>@yazar.SOYAD</td>
            <td>@yazar.DETAY</td>
            <td><a href="/Yazar/YazarGetir/@yazar.ID" class="btn btn-success">Güncelle</a></td>
            <td>@Html.ActionLink("Sil","YazarSil", new {id=yazar.ID}, new {@class="btn btn-danger", onclick="return confirm('Silmek istiyor musunuz?')"})</td>
        </tr>
    }
</table>


<a href="/Yazar/YazarEkle/" class="btn btn-primary">Yeni Yazar Ekle</a>
