@model MVCLibraryWebApplication.Models.Entity.TBL_HAREKET

@{
    ViewBag.Title = "OduncVer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ödünç Kitap Ver</h2>
<br />

<form class="form form-group" method="post">
    <div></div>

    <div style="margin-top:15px">
        <label>ÜYE ID</label>
        @Html.TextBoxFor(k => k.UYE, new { @class = "form-control" })
    </div>

    <div style="margin-top:15px">
        <label>KİTAP ID</label>
        @Html.TextBoxFor(k => k.KITAP, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>PERSONEL ID</label>
        @Html.TextBoxFor(k => k.PERSONEL, new { @class = "form-control" })
    </div>

    <!--Üyenin kitabı alış tarihi-->
    <div style="margin-top:15px">
        <label>KİTAP ALIŞ TARİHİ</label>
        <input type="text" class="form-control" name="ALISTARIH" value="@DateTime.Now.ToShortDateString()" />
    </div>

    <!--Üyenin kitabı iade etmesi gereken tarih-->
    <div style="margin-top:15px">
        <label>KİTAP VERİŞ TARİHİ</label>
        <input type="text" class="form-control" name="UYEIADETARIH" value="@DateTime.Now.AddDays(15).ToShortDateString()" />
    </div>


    <div style="margin-top:15px">
        <input type="hidden" value="false" name="ISLEMDURUM" />
        <button class="btn btn-info" id="Btn_OduncVer">Ödünç Kitap Ver</button>
    </div>
</form>