@model MVCLibraryWebApplication.Models.Entity.TBL_KITAP


@{
    ViewBag.Title = "KitapGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kitap Güncelle</h2>
<br />

@using (Html.BeginForm("KitapGuncelle", "Kitap", FormMethod.Post))
{
    <div class="form-group">
        <label>Kitap ID</label>
        @Html.TextBoxFor(k => k.ID, new { @class = "form-control" })
        <br />
        <label>Kitap Adı</label>
        @Html.TextBoxFor(k => k.AD, new { @class = "form-control" })
        <br />
        <label>Kategori</label>
        @Html.DropDownListFor(k => k.TBL_KATEGORI.ID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
        <br />
        <label>Yazar</label>
        @Html.DropDownListFor(k => k.TBL_YAZAR.ID, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
        <br />
        <label>Basım Yılı</label>
        @Html.TextBoxFor(k => k.BASIMYILI, new { @class = "form-control" })
        <br />
        <label>Yayınevi</label>
        @Html.DropDownListFor(k => k.TBL_YAYINEVI.ID, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control" })
        <br />
        <label>Sayfa Sayısı</label>
        @Html.TextBoxFor(k => k.SAYFASAYISI, new { @class = "form-control" })
    </div>

    <div>
        <button class="btn btn-warning">Güncelle</button>
    </div>
}