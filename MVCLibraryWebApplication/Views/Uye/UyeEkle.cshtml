@model MVCLibraryWebApplication.Models.Entity.TBL_UYELER

@{
    ViewBag.Title = "UyeEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Yeni Üye Ekle</h2>
<br />

<form class="form-group" method="post">
