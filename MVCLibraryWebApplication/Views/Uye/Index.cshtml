@using MVCLibraryWebApplication.Models.Entity
@using PagedList
@using PagedList.Mvc

@model PagedList.IPagedList<TBL_UYELER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Üyeler</h2>
<br />

<table class="table table-striped">
    <tr style="background-color: #FFB606">
        <th>ID</th>
        <th>AD</th>
        <th>SOYAD</th>
        <th>MAIL</th>
        <th>KULLANICI ADI</th>
        <th>ŞİFRE</th>
        <th>TELEFON</th>
        <th>OKUL</th>
        <th>GÜNCELLE</th>
        <th>SİL</th>
    </tr>

    @foreach (var uye in Model)
    {
        <tr>
            <td>@uye.ID </td>
            <td>@uye.AD</td>
            <td>@uye.SOYAD</td>
            <td>@uye.MAIL</td>
            <td>@uye.KULLANICIADI</td>
            <td>@uye.SIFRE</td>
            <td>@uye.TELEFON</td>
            <td>@uye.OKUL</td>
            <td><a href="/Uye/UyeGetir/@uye.ID" class="btn btn-success">Güncelle</a></td>
            <td>@Html.ActionLink("Sil", "UyeSil", new { id = uye.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek istiyor musunuz?')" })</td>
        </tr>
    }
</table>

@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
<a href="/Uye/UyeEkle" class="btn btn-primary">Yeni Üye Ekle</a>