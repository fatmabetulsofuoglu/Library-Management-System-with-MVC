@model MVCLibraryWebApplication.Models.Entity.TBL_PERSONEL

@{
    ViewBag.Title = "PersonelGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Görevli Bilgilerini Güncelle</h2>
<br />

@using (Html.BeginForm("PersonelGuncelle", "Personel", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(k => k.ID)
        @Html.TextBoxFor(k => k.ID, new { @class = "form-control" })
        <br />
        @Html.LabelFor(k => k.AD)
        @Html.TextBoxFor(k => k.AD, new { @class = "form-control" })
        <br />
        @Html.LabelFor(k => k.SOYAD)
        @Html.TextBoxFor(k => k.SOYAD, new { @class = "form-control" })
        <br />
    </div>

    <div>
        <button class="btn btn-warning">Güncelle</button>
    </div>
}