


@{ 
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <style>
        body {
            font-family: "Calibri", sans-serif;
        }

        .sidebar {
            height: 100%;
            width: 230px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #135B3D;
            overflow-x: hidden;
            padding-top: 16px;
        }

            .sidebar a {
                padding: 8px 8px 8px 10px;
                margin: 8px 20px 8px 10px;
                border-bottom: solid 1px grey;
                text-decoration: none;
                font-size: 16px;
                color: #E7E9EB;
                display: block;
                //margin:top right bottom left
            }

                .sidebar a:hover {
                    text-decoration: none;
                    color: #FDDD6D;
                    border-left: solid 3px white;
                }

        .main {
            margin-left: 230px; /* Same as the width of the sidenav */
            padding: 0px 10px;
        }

        @@media screen and (max-height: 450px) {
            .sidebar {
                padding-top: 15px;
            }

                .sidebar a {
                    font-size: 16px;
                }
        }

        .side-menu-h2 {
            color: white;
            font-family: "Calibri", sans-serif;
            margin: 10px 10px 20px 20px;
        }
    </style>
</head>
<body>


    <div class="sidebar">

        <img src="~/Images/gvc-logo.png" width="150px" height="150px" style="margin:40px 8px 15px 40px" />
        <h2 class="side-menu-h2">GV Kütüphane</h2>
        <a href="#"><i class="fa fa-home"></i>&nbsp; Anasayfa</a>
        <a href="/Kategori/Index/"><i class="fa fa-bookmark"></i>&nbsp;  Kategoriler</a>
        <a href="/Kitap/Index/"><i class="fa fa-book"></i>&nbsp; Kitaplar</a>
        <a href="/Yazar/Index/"><i class="fa fa-pencil"></i>&nbsp; Yazarlar</a>
        <a href="/Yayinevi/Index/"><i class="fa fa-bookmark"></i>&nbsp; Yayınevleri</a>
        <a href="/Uye/Index/"><i class="fa fa-users"></i>&nbsp; Üyeler</a>
        <a href="/Personel/Index/"><i class="fa fa-user"></i>&nbsp; Görevliler</a>
        <a href="/Odunc/OduncVer/"><i class="fa fa-arrow-circle-o-right"></i>&nbsp; Ödünç Kitap Ver</a>
        <a href="/Odunc/Index/"><i class="fa fa-arrow-circle-o-left"></i>&nbsp; Ödünç Kitap Al</a>
        <a href="/Islem/Index/"><i class="fa fa-arrow-circle-o-left"></i>&nbsp; İşlemler</a>
        <a href="#"><i class="fa fa-cog"></i>&nbsp; Ayarlar</a>
        <a href="#"><i class="fa fa-info"></i>&nbsp; Yardım</a>
    </div>

    <div class="main">
        @RenderBody()
    </div>

</body>
</html>
